<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="Theme.NoShadow" parent="android:style/Theme.Light.NoTitleBar">
		<item name="android:windowContentOverlay">@android:color/transparent</item> 
    </style>

	<style name="AppTheme" parent="android:style/Theme.Light.NoTitleBar">
    </style>

    <style name="App.Theme.Trans" parent="android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="myDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="MyCustomDialogStyle" parent="@android:style/Theme.DeviceDefault.Dialog.NoActionBar.MinWidth">
        <!-- Used for the background-->
        <item name="android:background">#ffffff</item>

        <!-- Used for the title and text-->
        <item name="android:textColorPrimary">#000000</item>

        <!-- title color + button color? -->
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
